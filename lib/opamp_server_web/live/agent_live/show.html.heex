<.header>
  Agent <%= @agent.id %>
  <:subtitle>
    Last Heartbeat: <%= render_time(@agent.component_health.status_time_unix_nano) %> UTC
    <br/>
    Healthy? <%= @agent.component_health.healthy %>
    <br/>
    Service Name: <%= find_description_field(@agent.description, "service.name") %>
    <br/>
    Host Name: <%= find_description_field(@agent.description, "host.name") %>
    <br/>
    OS Family: <%= find_description_field(@agent.description, "os.family") %>
  </:subtitle>
</.header>

<.table
  id="instance"
  rows={@map_keys}
  row_click={fn collector -> JS.push("select", value: %{collector: collector}) end}
>
  <:col :let={collector} label="Modifiable?"><%= managed?(@agent, collector) %></:col>
  <:col :let={collector} label="Collector Name"><%= collector %></:col>
  <:col :let={collector} label="Replicas"><%= Map.get(@agent.component_health.component_health_map[collector], :status, "") %></:col>
  <:col :let={collector} label="Start Time"><%= render_time(@agent.component_health.component_health_map[collector].start_time_unix_nano) %> UTC</:col> 
  <:col :let={collector} label="Last Heartbeat"><%= render_time(@agent.component_health.component_health_map[collector].status_time_unix_nano) %> UTC</:col>
</.table>

<div id="editor"></div>
<%= if Map.has_key?(@agent.effective_config.config_map.config_map, @collector) do %>
  <.form :let={f} for={@changeset} phx-change="validate" phx-submit="save">
    <%= label f, "Effective Configuration" do %>
      <%= textarea f, :effective_config, phx_hook: "EditorForm", value: @agent.effective_config.config_map.config_map[@collector].body, style: "display: none;" %>
    <% end %>
    <%= submit "Submit" %>
  </.form>
<% end %>

<.back navigate={~p"/agent"}>Back to agent</.back>

<.modal :if={@live_action == :edit} id="agent-modal" show on_cancel={JS.patch(~p"/agent/#{@agent}")}>
  <.live_component
    module={OpAMPServerWeb.AgentLive.FormComponent}
    id={@agent.id}
    title={@page_title}
    action={@live_action}
    agent={@agent}
    patch={~p"/agent/#{@agent}"}
  />
</.modal>
